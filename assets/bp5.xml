<?xml version="1.0" encoding="UTF-8"?>
<debateformat name="British Parliamentary (5 minutes)" schemaversion="1.0">
	<info>
		<region>World</region>
		<level>University</level>
		<desc>Four teams of two, 15 minutes prep, 5 minute speeches, POIs allowed</desc>
	</info>

	<speechtype ref="prep" length="15:00" firstperiod="prepare" countdir="down">
		<period ref="prepare" desc="Prepare debate" />
		<period ref="final5" desc="Last 5 minutes" />
		<bell time="10:00" number="1" nextperiod="final5" />
		<bell time="finish" number="2" />
	</speechtype>

	<speechtype ref="all" length="5:00" firstperiod="initial">
		<period ref="initial" desc="First minute" bgcolor="#stay" />
		<period ref="pois-allowed" desc="POIs allowed" bgcolor="#7700ff00" poisallowed="true"/>
		<period ref="warning" desc="Warning bell rung" bgcolor="#77ffcc00" />
		<period ref="overtime" desc="Overtime" bgcolor="#77ff0000" />
		<bell time="1:00" number="1" nextperiod="pois-allowed" sound="#default" />
		<bell time="4:00" number="1" nextperiod="warning" sound="#default" />
		<bell time="finish" number="2" nextperiod="overtime" sound="#default" />
	</speechtype>

	<speeches>
		<speech name="Preparation Time" type="prep" />
		<speech name="Prime Minister" type="all" />
		<speech name="Leader of the Opposition" type="all" />
		<speech name="Deputy Prime Minister" type="all" />
		<speech name="Deputy Leader of the Opposition" type="all" />
		<speech name="Member for the Government" type="all" />
		<speech name="Member for the Opposition" type="all" />
		<speech name="Government Whip" type="all" />
		<speech name="Opposition Whip" type="all" />
	</speeches>
</debateformat>
