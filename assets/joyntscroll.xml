<?xml version="1.0" encoding="UTF-8"?>
<debateformat name="Joynt Scroll" schemaversion="1.0">
	<info>
		<region>New Zealand</region>
		<level>University</level>
		<usedat>New Zealand Universities Prepared Debating Championships</usedat>
		<desc>3 vs 3, 10-minute speeches, 5-minute replies, POIs allowed</desc>
	</info>

	<resource ref="#all">
		<period ref="warning" desc="Warning bell rung" bgcolor="#77ffcc00" />
		<period ref="overtime" desc="Overtime" bgcolor="#77ff0000" />
	</resource>

	<speechtype ref="substantive" length="10:00" firstperiod="firstmin">
		<period ref="firstmin" desc="First minute" bgcolor="#stay" />
		<period ref="pois-allowed" desc="POIs allowed" bgcolor="#7700ff00" />
		<bell time="1:00" number="1" nextperiod="pois-allowed" sound="#default" />
		<bell time="9:00" number="1" nextperiod="warning" sound="#default" />
		<bell time="finish" number="2" nextperiod="overtime" sound="#default" />
	</speechtype>

	<speechtype ref="reply" length="5:00" firstperiod="main">
		<period ref="main" desc="Main part" bgcolor="#stay" />
		<bell time="4:00" number="1" nextperiod="warning" sound="#default" />
		<bell time="finish" number="2" nextperiod="overtime" sound="#default" />
	</speechtype>

	<speeches>
		<speech name="1st Affirmative" type="substantive" />
		<speech name="1st Negative" type="substantive" />
		<speech name="2nd Affirmative" type="substantive" />
		<speech name="2nd Negative" type="substantive" />
		<speech name="3rd Affirmative" type="substantive" />
		<speech name="3rd Negative" type="substantive" />
		<speech name="Negative Leader's Reply" type="reply" />
		<speech name="Affirmative Leader's Reply" type="reply" />
	</speeches>
</debateformat>
