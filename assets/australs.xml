<?xml version="1.0" encoding="UTF-8"?>
<debateformat name="Australs" schemaversion="1.0">
	<info>
		<region>Australasia</region>
		<level>University</level>
		<usedat>Australasian Intervarsity Debating Championships</usedat>
		<desc>3 vs 3, 8-minute speeches, 4-minute replies, no POIs</desc>
	</info>
	
	<preptime length="30:00" />
	
	<resource ref="#all">
		<period ref="initial" desc="Main part" bgcolor="#stay" />
		<period ref="warning" desc="Warning bell rung" bgcolor="#77ffcc00" />
		<period ref="overtime" desc="Overtime" bgcolor="#77ff0000" />
	</resource>
	
	<speechtype ref="substantive" length="8:00" firstperiod="initial">
		<bell time="6:00" number="1" nextperiod="warning" />
		<bell time="finish" number="2" nextperiod="overtime" />
	</speechtype>
	
	<speechtype ref="reply" length="4:00" firstperiod="initial">
		<bell time="3:00" number="1" nextperiod="warning" />
		<bell time="finish" number="2" nextperiod="overtime" />
	</speechtype>
	
	<speeches>
		<speech name="1st Affirmative" type="substantive" />
		<speech name="1st Negative" type="substantive" />
		<speech name="2nd Affirmative" type="substantive" />
		<speech name="2nd Negative" type="substantive" />
		<speech name="3rd Affirmative" type="substantive" />
		<speech name="3rd Negative" type="substantive" />
		<speech name="Negative Leader's Reply" type="reply" />
		<speech name="Affirmative Leader's Reply" type="reply" />
	</speeches>
</debateformat>
