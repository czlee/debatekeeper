    <string name="ioErrorDialog_title">Oh no!</string>
    <string name="ioErrorDialog_message">I couldn\'t find the debate style files.</string>
    <string name="ioErrorDialog_button">Go back</string>

    <string name="blankDetailsDialog_title">"Sorry!"</string>
    <string name="blankDetailsDialog_text">"There's a problem with this debate format's XML file (%1$s).\n\nIn more detail:\n%2$s"</string>

    <string name="formatChooser_toast_noSelection">No style selected</string>
    <string name="formatChooser_toast_formatUnchanged">Style not changed</string>
    
    <string name="formatChooser_actionBar_confirmName">Confirm</string>

    <string name="viewFormat_regionLabel">Region</string>
    <string name="viewFormat_levelLabel">Level</string>
    <string name="viewFormat_usedAtLabel">Used at</string>
    <string name="viewFormat_descLabel">Description</string>
    <string name="viewFormat_speechesLabel">Speeches</string>
    <string name="viewFormat_fileNameLabel">File name</string>
    <string name="viewFormat_fileLocationValue_userDefined">Custom user file</string>
    <string name="viewFormat_prepTimeLabel">Prep time</string>
    <string name="viewFormat_showDetails_buttonText">More</string>

    <string name="viewFormat_timeDescription_lengthInMinutesSeconds">%s long</string>

    <plurals name="viewFormat_timeDescription_lengthInMinutesOnly">
        <item quantity="one">%d minute</item>
        <item quantity="other">%d minutes</item>
    </plurals>

    <string name="viewFormat_timeDescription_controlledPrepSuffix">", controlled"</string>

    <plurals name="viewFormat_timeDescription_bellsList">
        <item quantity="one">bell at %s</item>
        <item quantity="other">bells at %s</item>
    </plurals>

    <string name="viewFormat_speechTypeDescription">"<i>%1$s</i>: %2$s"</string>
    <string name="viewFormat_speechDescription">"%1$s (<i>%2$s</i>)"</string>

    <style name="ViewFormat_WrapText">
        <!-- On some phones, it doesn't seem to wrap text automatically. This style is
        a workaround for those phones, to force certain TextViews to wrap text. -->
        <item name="android:maxLines">8</item> <!-- We really want this to be unlimited, but it seems to restrict to 1 on some phones if you omit this item. Eight should be enough. -->
        <item name="android:scrollHorizontally">false</item>
    </style>
    
    <style name="ViewFormat_TableLabel">
        <item name="android:paddingLeft">7dip</item>
        <item name="android:layout_width">100dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ViewFormat_TableValue" parent="@style/ViewFormat_WrapText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">-</item>
    </style>

    <style name="ViewFormat_TableSpeeches">
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <dimen name="view_format_list_item_padding">3dip</dimen>

</resources>