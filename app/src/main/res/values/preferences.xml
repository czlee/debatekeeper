<resources>

    <string name="fragmentName_GlobalSettings">Settings</string>

    <!-- Keys -->
    <!-- These strings must be unique. -->
    <string name="pref_ringBells_key" translatable="false">ringBells</string>
    <string name="pref_vibrateMode_key" translatable="false">vibrateMode</string>
    <string name="pref_flashScreenMode_key" translatable="false">flashScreenMode</string>
    <string name="pref_overtimeBellsEnable_key" translatable="false">overtimeBellsEnable</string>
    <string name="pref_firstOvertimeBell_key" translatable="false">firstOvertimeBell</string>
    <string name="pref_overtimeBellPeriod_key" translatable="false">overtimeBellPeriod</string>
    <string name="pref_countDirection_key" translatable="false">countDirection</string>
    <string name="pref_backgroundColourArea_key" translatable="false">backgroundColourArea</string>
    <string name="pref_keepScreenOn_key" translatable="false">keepScreenOn</string>
    <string name="pref_poiTimer_enable_key" translatable="false">poiTimerEnable</string>
    <string name="pref_poiTimer_buzzerEnable_key" translatable="false">poiBuzzerEnable</string>
    <string name="pref_poiTimer_vibrateEnable_key" translatable="false">poiVibrateEnable</string>
    <string name="pref_poiTimer_flashScreenMode_key" translatable="false">poiFlashScreenMode</string>
    <string name="pref_prepTimer_enable_key" translatable="false">prepTimerEnable</string>
    <string name="pref_prepTimer_countDirection_key" translatable="false">prepTimerCountDirection</string>
    <string name="pref_prepTimer_keepScreenOn_key" translatable="false">prepTimerKeepScreenOn</string>
    <string name="pref_prepTimer_bells_key" translatable="false">prepTimerBells</string>

    <!-- Category titles -->
    <string name="prefCategory_overtimeBells_title">Overtime bells</string>
    <string name="prefCategory_pois_title">Points of information</string>
    <string name="prefCategory_prepTime_title">Preparation timer</string>
    <string name="prefCategory_bells_title">Bells</string>
    <string name="prefCategory_general_title">General</string>

    <!-- Silent mode -->
    <string name="pref_ringBells_title">Ring bells</string>
    <string name="pref_ringBells_onSummary">Bells will sound\n(Everyone except the timekeeper should turn these off)</string>
    <string name="pref_ringBells_offSummary">Bells will not sound\n(This doesn\'t affect other sounds from your phone)</string>
    <bool   name="prefDefault_ringBells">true</bool>

    <!-- Vibrate mode -->
    <string name="pref_vibrateMode_title">Vibrate</string>
    <string name="pref_vibrateMode_onSummary">Vibrate at bell times</string>
    <string name="pref_vibrateMode_offSummary">Don\'t vibrate</string>
    <bool   name="prefDefault_vibrateMode">false</bool>

    <!-- Flash screen -->
    <string name="pref_flashScreenMode_title">Flash screen</string>
    <string-array name="pref_flashScreenMode_summaries">
        <item>Don\'t flash screen</item>
        <item>Do a strobe flash at bell times</item>
        <item>Flash screen white briefly at bell times</item>
    </string-array>
    <string-array name="pref_flashScreenMode_entries">
        <item>Off</item>
        <item>Strobe flash</item>
        <item>Solid flash</item>
    </string-array>
    <string-array name="pref_flashScreenMode_values" translatable="false">
        <item>off</item>
        <item>strobeFlash</item>
        <item>solidFlash</item>
    </string-array>
    <string name="prefDefault_flashScreenMode" translatable="false">off</string>

    <!-- Overtime bells -->
    <string name="pref_overtimeBellsEnable_title">Enable overtime bells</string>
    <string name="pref_overtimeBellsEnable_onSummary">Ring overtime bells as specified below</string>
    <string name="pref_overtimeBellsEnable_offSummary">Don\'t ring any overtime bells</string>
    <bool   name="prefDefault_overtimeBellsEnable">true</bool>

    <string name="pref_firstOvertimeBell_title">First overtime bell</string>
    <string name="pref_firstOvertimeBell_summary">Ring the first overtime bell after %s seconds…</string>
    <integer name="prefDefault_firstOvertimeBell">15</integer>

    <string name="pref_overtimeBellPeriod_title">Overtime bell period</string>
    <string name="pref_overtimeBellPeriod_summary">…and then every %s seconds after that</string>
    <integer name="prefDefault_overtimeBellPeriod">15</integer>

    <!-- Count direction -->
    <string name="pref_countDirection_title">Count direction</string>
    <string-array name="pref_countDirection_summaries">
        <item>Count up</item>
        <item>Count down</item>
    </string-array>
    <string-array name="pref_countDirection_entries">
        <item>Count up</item>
        <item>Count down</item>
    </string-array>
    <!-- In case you're wondering, the reason these are called alwaysUp and alwaysDown is because
    there used to be options called generallyUp and generallyDown. These options were obsoleted
    in version 0.9, but to retain compatibility we keep the values for the other two as they
    were before. Since the user never sees these, it doesn't matter what they're called. -->
    <string-array name="pref_countDirection_values" translatable="false">
        <item>alwaysUp</item>
        <item>alwaysDown</item>
    </string-array>
    <string name="prefDefault_countDirection" translatable="false">alwaysUp</string>

    <!-- Background colour -->
    <string name="pref_backgroundColourArea_title">Background colour area</string>
    <string-array name="pref_backgroundColourArea_summaries">
        <item>Leave background black for whole debate</item>
        <item>Colour top bar only to indicate periods within speeches</item>
        <item>Colour whole screen to indicate periods within speeches</item>
    </string-array>
    <string-array name="pref_backgroundColourArea_entries">
        <item>Disabled</item>
        <item>Top bar only</item>
        <item>Whole screen</item>
    </string-array>
    <string-array name="pref_backgroundColourArea_values" translatable="false">
        <item>disabled</item>
        <item>topBarOnly</item>
        <item>wholeScreen</item>
    </string-array>
    <string name="prefDefault_backgroundColourArea" translatable="false">wholeScreen</string>

    <!-- Keep screen on -->
    <string name="pref_keepScreenOn_title">Keep screen on</string>
    <string name="pref_keepScreenOn_onSummary">Keep screen on while timer is running</string>
    <string name="pref_keepScreenOn_offSummary">Apply normal screen timeout</string>
    <bool   name="prefDefault_keepScreenOn">true</bool>

    <!-- *** Preparation time *** -->
    <string name="pref_prepTimer_enable_title">Enable prep timer</string>
    <string name="pref_prepTimer_enable_onSummary">Use the preparation timer</string>
    <string name="pref_prepTimer_enable_offSummary">"Don't use the preparation timer"</string>
    <bool   name="prefDefault_prepTimer_enable">true</bool>

    <string-array name="pref_prepTimer_countDirection_summaries">
        <item>Count up in the prep timer</item>
        <item>Count down in the prep timer</item>
    </string-array>
    <string name="prefDefault_prepTimer_countDirection" translatable="false">alwaysDown</string>

    <string name="pref_prepTimer_keepScreenOn_onSummary">Keep screen on while prep timer is running</string>
    <string name="pref_prepTimer_keepScreenOn_offSummary">Apply normal screen timeout during prep time</string>
    <bool   name="prefDefault_prepTimer_keepScreenOn">false</bool>

    <string name="pref_prepTimer_bells_title">Prep timer bells</string>
    <string name="pref_prepTimer_bells_summary">Edit bells used during preparation time</string>

       <!-- *** Points of information *** -->
    <string name="pref_poiTimer_enable_title">Show POIs timer</string>
    <string name="pref_poiTimer_enable_onSummary">Show the POIs timer when appropriate</string>
    <string name="pref_poiTimer_enable_offSummary">Hide the POIs timer</string>
    <bool   name="prefDefault_poiTimer_enable">true</bool>

    <bool   name="prefDefault_poiTimer_buzzerEnable">false</bool>

    <string name="pref_poiTimer_vibrateEnable_title">Vibrate</string>
    <string name="pref_poiTimer_vibrateEnable_onSummary">Vibrate when POI time expires</string>
    <string name="pref_poiTimer_vibrateEnable_offSummary">Don\'t vibrate for POIs</string>
    <bool   name="prefDefault_poiTimer_vibrateEnable">false</bool>

    <string name="pref_poiTimer_flashScreenMode_dialogTitle">Flash screen for POIs</string>
    <string-array name="pref_poiTimer_flashScreenMode_summaries">
        <item>Don\'t flash screen for POIs</item>
        <item>Do a strobe flash when POI time expires</item>
        <item>Flash screen blue briefly when POI time expires</item>
    </string-array>
    <!-- For the entries and entry values, use the same ones as the main flash screen preference -->
    <string name="prefDefault_poiTimer_flashScreenMode" translatable="false">solidFlash</string>

</resources>
