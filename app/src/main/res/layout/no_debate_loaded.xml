<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/noDebateLoaded_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/mainScreen_noDebateLoaded_text"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/noDebateLoaded_chooseStyleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

        <Button
        android:id="@+id/noDebateLoaded_chooseStyleButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/debateTimer_controlButtons_height"
        android:layout_marginBottom="32dp"
        android:text="@string/mainScreen_controlButton_chooseStyle_text"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>