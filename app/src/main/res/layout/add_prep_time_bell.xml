<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/addPrepTimeBellDialog_typeSpinner"
        android:layout_width="match_parent"
        android:layout_height="50dip" />

    <!-- The time picker is for "time from start" and "time from finish" -->

    <TimePicker
        android:id="@+id/addPrepTimeBellDialog_timePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner" />

    <!--
    The text box is for percentage through prep time.
    We use a text box, not a number picker, so that the user can enter decimals.
    -->

    <EditText
        android:id="@+id/addPrepTimeBellDialog_editText"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal" />

</LinearLayout>
