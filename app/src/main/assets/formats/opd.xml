<?xml version='1.0' encoding='UTF-8'?>
<debate-format schema-version="2.2">
  <name lang="en">Open Parliamentary</name>
  <name lang="de">Offene Parlamentarische Debatte</name>
  <info>
    <region>
      <text lang="en">Germany</text>
      <text lang="de">Deutschland</text>
    </region>
    <level>
      <text lang="en">University</text>
      <text lang="de">Universität</text>
    </level>
    <used-at>
      <text lang="en">German-Language Championship</text>
      <text lang="de">Deutschsprachige Meisterschaften</text>
    </used-at>
    <description lang="en">Two teams of three (7-minute speeches) plus three nonaligned speakers (3:30 speeches, 1-minute reply by teams), POIs allowed</description>
    <description lang="de">Zwei Dreierteams (7 Minuten Reden) plus drei Fraktionsfreie Redner (3:30 Reden, 1 Minute Antwort), POIs erlaubt</description>
  </info>
  <period-types>
    <period-type ref="opd.nonaligned-reply">
      <name lang="en">OPD: Nonaligned reply</name>
      <name lang="de">OPD: Antwort auf fraktionsfreien Redner</name>
      <display lang="en">by side opposed by previous nonaligned speaker</display>
      <display lang="de">bei der zum vorherigen fraktionsfreien Redner gegnerischen Seite</display>
    </period-type>
  </period-types>
  <prep-time length="15:00"/>
  <speech-types>
    <speech-type ref="team" length="7:00" first-period="normal">
      <name lang="en">Team</name>
      <name lang="de">Team</name>
      <bell time="1:00" number="1" next-period="pois-allowed"/>
      <bell time="6:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
    <speech-type ref="nonaligned" length="3:30" first-period="normal">
      <name lang="en">Nonaligned</name>
      <name lang="de">Fraktionsfrei</name>
      <bell time="1:00" number="1" next-period="pois-allowed"/>
      <bell time="3:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
    <speech-type ref="reply" length="1:00" first-period="opd.nonaligned-reply">
      <name lang="en">Reply</name>
      <name lang="de">Antwort</name>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
  </speech-types>
  <speeches>
    <speech type="team">
      <name lang="en">Opening Speaker for the Government</name>
      <name lang="de">Eröffnende Regierung</name>
    </speech>
    <speech type="team">
      <name lang="en">Opening Speaker for the Opposition</name>
      <name lang="de">Eröffnende Opposition</name>
    </speech>
    <speech type="team">
      <name lang="en">Extension Speaker for the Government</name>
      <name lang="de">Ergänzende Regierung</name>
    </speech>
    <speech type="team">
      <name lang="en">Extension Speaker for the Opposition</name>
      <name lang="de">Ergänzende Opposition</name>
    </speech>
    <speech type="nonaligned">
      <name lang="en">1st Nonaligned Speaker</name>
      <name lang="de">1. Fraktionsfreier Redner</name>
    </speech>
    <speech type="reply">
      <name lang="en">1st Reply Speech</name>
      <name lang="de">1. Zwischenrede der gegnerischen Seite</name>
    </speech>
    <speech type="nonaligned">
      <name lang="en">2nd Nonaligned Speaker</name>
      <name lang="de">2. Fraktionsfreier Redner</name>
    </speech>
    <speech type="reply">
      <name lang="en">2nd Reply Speech</name>
      <name lang="de">2. Zwischenrede der gegnerischen Seite</name>
    </speech>
    <speech type="nonaligned">
      <name lang="en">3rd Nonaligned Speaker</name>
      <name lang="de">3. Fraktionsfreier Redner</name>
    </speech>
    <speech type="reply">
      <name lang="en">3rd Reply Speech</name>
      <name lang="de">3. Zwischenrede der gegnerischen Seite</name>
    </speech>
    <speech type="team">
      <name lang="en">Closing Speaker for the Opposition</name>
      <name lang="de">Schließende Opposition</name>
    </speech>
    <speech type="team">
      <name lang="en">Closing Speaker for the Government</name>
      <name lang="de">Schließende Regierung</name>
    </speech>
  </speeches>
</debate-format>
