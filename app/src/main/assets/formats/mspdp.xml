<?xml version='1.0' encoding='UTF-8'?>
<debate-format schema-version="2.1">
  <name>Middle School Public Debate Program</name>
  <short-name>MSPDP</short-name>
  <info>
    <region>United States</region>
    <level>Middle School</level>
    <used-at>Middle School Public Debate Program</used-at>
    <description>3 vs 3, 5-minute constructives (by 1st and 2nd), 4-minute rebuttals (by 3rd), POIs allowed</description>
  </info>
  <prep-time length="20:00"/>
  <speech-types>
    <speech-type ref="constructive" length="5:00" first-period="normal">
      <bell time="1:00" number="1" next-period="pois-allowed"/>
      <bell time="4:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
    <speech-type ref="rebuttal" length="4:00" first-period="normal">
      <bell time="3:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
  </speech-types>
  <speeches>
    <speech type="constructive">
      <name>1st Proposition</name>
    </speech>
    <speech type="constructive">
      <name>1st Opposition</name>
    </speech>
    <speech type="constructive">
      <name>2nd Proposition</name>
    </speech>
    <speech type="constructive">
      <name>2nd Opposition</name>
    </speech>
    <speech type="rebuttal">
      <name>Opposition Rebuttal</name>
    </speech>
    <speech type="rebuttal">
      <name>Proposition Rebuttal</name>
    </speech>
  </speeches>
</debate-format>
