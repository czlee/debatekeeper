<?xml version='1.0' encoding='UTF-8'?>
<debate-format schema-version="2.1">
  <name>Test format 1</name>
  <info>
    <region>None</region>
    <level>None</level>
    <used-at>Nowhere</used-at>
    <description>Use this format to try out this app without waiting ages for bells</description>
  </info>
  <prep-time length="20"/>
  <speech-types>
    <speech-type ref="substantive" length="20" first-period="normal">
      <bell time="5" number="1" next-period="pois-allowed"/>
      <bell time="15" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
    <speech-type ref="reply" length="10" first-period="normal">
      <bell time="5" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
  </speech-types>
  <speeches>
    <speech type="substantive">
      <name>Prime Minister</name>
    </speech>
    <speech type="substantive">
      <name>Leader of the Opposition</name>
    </speech>
    <speech type="substantive">
      <name>Deputy Prime Minister</name>
    </speech>
    <speech type="substantive">
      <name>Deputy Leader of the Opposition</name>
    </speech>
    <speech type="substantive">
      <name>Government Whip</name>
    </speech>
    <speech type="substantive">
      <name>Opposition Whip</name>
    </speech>
    <speech type="reply">
      <name>Opposition Reply</name>
    </speech>
    <speech type="reply">
      <name>Government Reply</name>
    </speech>
  </speeches>
</debate-format>
