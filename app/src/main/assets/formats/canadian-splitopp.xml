<?xml version='1.0' encoding='UTF-8'?>
<debate-format schema-version="2.1">
  <name>Canadian Parliamentary (split opp)</name>
  <short-name>CP (split opp)</short-name>
  <info>
    <region>Canada</region>
    <level>University</level>
    <used-at>Canadian National Debating Championship</used-at>
    <description>Split opposition rebuttal. 2 vs 2, POIs allowed, 7-minute constructives, 3-minute rebuttals</description>
  </info>
  <speech-types>
    <speech-type ref="constructive" length="7:00" first-period="normal">
      <bell time="1:00" number="1" next-period="pois-allowed"/>
      <bell time="6:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
    <speech-type ref="rebuttal" length="3:00" first-period="normal">
      <bell time="2:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
  </speech-types>
  <speeches>
    <speech type="constructive">
      <name>Prime Minister's Constructive</name>
    </speech>
    <speech type="constructive">
      <name>Leader of the Opposition</name>
    </speech>
    <speech type="constructive">
      <name>Minister of the Crown</name>
    </speech>
    <speech type="constructive">
      <name>Member of the Opposition</name>
    </speech>
    <speech type="rebuttal">
      <name>Leader of the Opposition's Rebuttal</name>
    </speech>
    <speech type="rebuttal">
      <name>Prime Minister's Rebuttal</name>
    </speech>
  </speeches>
</debate-format>
