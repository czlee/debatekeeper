<?xml version='1.0' encoding='UTF-8'?>
<debate-format schema-version="2.1">
  <name>Asian Parliamentary</name>
  <version>1</version>
  <info>
    <region>Asia</region>
    <level>University</level>
    <used-at>United Asian Debating Championship</used-at>
    <description>3 vs 3, 7-minute speeches, 4-minute replies, POIs allowed</description>
  </info>
  <prep-time length="30:00"/>
  <speech-types>
    <speech-type ref="substantive" length="7:00" first-period="normal">
      <bell time="1:00" number="1" next-period="pois-allowed"/>
      <bell time="6:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
    <speech-type ref="reply" length="4:00" first-period="normal">
      <bell time="3:00" number="1" next-period="warning"/>
      <bell time="finish" number="2" next-period="overtime"/>
    </speech-type>
  </speech-types>
  <speeches>
    <speech type="substantive">
      <name>Prime Minister</name>
    </speech>
    <speech type="substantive">
      <name>Leader of the Opposition</name>
    </speech>
    <speech type="substantive">
      <name>Deputy Prime Minister</name>
    </speech>
    <speech type="substantive">
      <name>Deputy Leader of the Opposition</name>
    </speech>
    <speech type="substantive">
      <name>Government Whip</name>
    </speech>
    <speech type="substantive">
      <name>Opposition Whip</name>
    </speech>
    <speech type="reply">
      <name>Opposition Reply</name>
    </speech>
    <speech type="reply">
      <name>Government Reply</name>
    </speech>
  </speeches>
</debate-format>
